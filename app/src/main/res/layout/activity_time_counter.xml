<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timer.TimeCounterActivity">

    <TextView
        android:id="@+id/title_reverse_time_counter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reverse Timer"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@id/reverse_time_counter_txt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/reverse_time_counter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parthiv"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/title_time_counter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 to unlimited timer"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@id/reverse_time_counter_txt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/time_counter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parthiv"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_below="@id/title_time_counter_txt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>