<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllChartsActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/barchart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bar Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/barchart"
            android:layout_below="@id/barchart_txt"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/piechart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pie Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/barchart"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/piechart"
            android:layout_below="@id/piechart_txt"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/linechart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Line Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/piechart"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/linechart"
            android:layout_below="@id/linechart_txt"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/bubblechart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bubble Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/linechart"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true" />

        <com.github.mikephil.charting.charts.BubbleChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/bubblechart"
            android:layout_below="@id/bubblechart_txt"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/candlestickchart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Candle Stick Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/bubblechart"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <com.github.mikephil.charting.charts.CandleStickChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/candleStickchart"
            android:layout_below="@id/candlestickchart_txt"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/radarchart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radar Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/candleStickchart"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <com.github.mikephil.charting.charts.RadarChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/radarchart"
            android:layout_below="@id/radarchart_txt"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/combinedchart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combined Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/radarchart"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/combinedchart"
            android:layout_below="@id/combinedchart_txt"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/scatterchart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scatter Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/combinedchart"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <com.github.mikephil.charting.charts.ScatterChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/scatterchart"
            android:layout_below="@id/scatterchart_txt"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/horizontalbarchart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horizontal Bar Chart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/scatterchart"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/horizontalbarchart"
            android:layout_below="@id/horizontalbarchart_txt"
            android:background="@color/white"/>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>